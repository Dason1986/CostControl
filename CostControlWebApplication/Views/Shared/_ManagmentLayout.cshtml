<!DOCTYPE html>
<html>
@{
    var boundedContext = Html.GetBoundedContext();
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@boundedContext.AppName @ViewData["Title"]</title>




    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/AdminLTE/js/adminlte.js"></script>

        <script src="~/lib/vue/vue.js"></script>
        <script src="~/lib/vue/vuex.js"></script>
        <script src="~/lib/vue/vue-router.js"></script>
        <script src="~/lib/vue/vue-resource.js"></script>

        <script src="~/lib/element-ui/lib/index.js"></script>


        <link href="~/lib/Ionicons/css/ionicons.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />

        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
        <link href="~/lib/AdminLTE/css/AdminLTE.css" rel="stylesheet" />
        <link href="~/lib/AdminLTE/css/skins/skin-blue.css" rel="stylesheet" />
        <link href="~/lib/AdminLTE/css/skins/_all-skins.css" rel="stylesheet" />

    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/AdminLTE/js/adminlte.min.js"></script>

        <script src="~/lib/vue/vue.min.js"></script>
        <script src="~/lib/vue/vuex.min.js"></script>
        <script src="~/lib/vue/vue-router.min.js"></script>
        <script src="~/lib/vue/vue-resource.min.js"></script>

        <script src="~/lib/element-ui/lib/index.js"></script>


        <link href="~/lib/Ionicons/css/ionicons.min.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/element-ui/lib/theme-chalk/index.css" rel="stylesheet" />
        <link href="~/lib/AdminLTE/css/AdminLTE.min.css" rel="stylesheet" />
        <link href="~/lib/AdminLTE/css/skins/skin-blue.min.css" rel="stylesheet" />
        <link href="~/lib/AdminLTE/css/skins/_all-skins.min.css" rel="stylesheet" />
    </environment>

    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .box-card {
            width: 100%;
        }



        .el-table .error-row {
            background: #fdf7f7;
        }

        .el-table .success-row {
            background: #f0f9eb;
        }


        .el-table .cell-lable {
            min-width: 40px;
            margin-left: 10px;
        }

        .el-table .cell-value {
            margin-left: 10px;
        }

        .el-table .cell .row {
            margin-left: 0px;
        }

        .el-table .cell .dtcell .right {
            text-align: right;
        }
    </style>
    <script src="~/js/jsvue.js"></script>
    <script src="~/js/site.js"></script>
</head>


<body class="skin-blue sidebar-mini">

    <div id="wrapper">

        <!-- Navigation -->

        <header class="main-header" id="appHeader">
            <!-- Logo -->
            <a class="logo">

                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini">      <b>成本核算</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg">      <b>工程成本核算系统</b></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" style="padding:0px" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        @{
                            var user = User.Identity as System.Security.Claims.ClaimsIdentity;

                        }
                        <li class="dropdown user user-menu">
                            <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">

                                <span class="hidden-xs">@user.Name </span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header text-left" style="height:150px">
                                    <p>
                                        用户： @user.Name
                                    </p>

                                </li>
                                <!-- Menu Body -->
                                @*<li class="user-body">

                                    </li>*@
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="/Account/userProfile" class="btn btn-default btn-flat">个人资料</a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="/Account/Logout" class="btn btn-default btn-flat">退出</a>
                                    </div>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left Menu -->

        <bg-sidebar-menu header="导航菜单" menus="@Html.GetMenus()" id="appNav" style="margin-top:50px;padding-top: 0px;"></bg-sidebar-menu>

        <!-- Main -->
        <section style="min-height: 833px;" class="content-wrapper">
            @RenderBody()
        </section>

    </div>
    <bg-footer></bg-footer>

 


    @RenderSection("Scripts", required: false)


</body>

</html>
